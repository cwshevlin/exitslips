<h1><%= @quiz.name %></h1>
<p><%= @quiz.instructions %></p>

<% form_for @sitting, quiz_sittings_path do |f| %>
  <% @quiz.questions.each do |question| %>
    <div>
      <p><%= question.query %></p>
      <p><% question.options.each do |option| %>
        <input type="hidden" name="<%=@sitting.quiz_id%>", value="@quiz.id">
        <input type="radio" name="<%= question.id %>" value="<%= option.id %>"><%= option.content %><br>
        <%= f.submit "Submit" %>
        <% end %>
      </p>
    </div>
  <% end %>
<% end %>



<%= hidden_field_tag :stock_symbol, 'test' %>
