<div id="sign-up">

<h1> Exit Slips </h1>

<br>

<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <br>
  <div>
  <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name' %></div>
    <br>
    <div>
  <%= f.text_field :last_name, autofocus: true, placeholder: 'Last Name' %></div>

  <br>
  <div>
  <%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>
  <br>
  <div> 
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %></div>
  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %></div>
  <br>
  <div>
    <%= f.select :user_type, ["Student", "Teacher"] %></div>

  <div><%= f.submit "Sign Up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>