<link href='http://fonts.googleapis.com/css?family=Lato:400italic,700italic' rel='stylesheet' type='text/css'>

<div id="sign-up-background">
<div id="sign-up">

<h1> Exit Slips </h1>

<br>

<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <br>
  <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name' %>
    <br>
  <%= f.text_field :last_name, autofocus: true, placeholder: 'Last Name' %>
  <br>
  <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
  <br>
  <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
  <br>
  <%= f.select :user_type, ["Student", "Teacher"] %>
  <br>
  <div><%= f.submit "Sign Up", class: 'link-box' %></div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
