<h1> Your Sections</h1>
<div id = "sections">
<%= link_to 'New Section', new_section_path %>
<%if @sections.length !=0 %>
	<table>
	  <tr>
	    
	    <th colspan="2"></th>
	  </tr>
 
	<% @sections.reverse.each do |section| %>
	  <tr>
	    <td><%= link_to section.name, section_path(section) %><td>
	    
	    <td><%= link_to 'Edit', edit_section_path(section) %></td>
	    <td><%= link_to 'Destroy', section_path(section),
	                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>

	</table>
<%end%>   

</div>

