<div id="table-all-standards">
  <table class="table-active">
    <thead>
      <tr>
        <td></td>
        <% @standards.each do |standard| %>
          <td><div class="tooltip-heading" title="<%= standard.description %>" id="standard-code"><%= standard.code %></div></td>
        <% end %>
      </tr>
    </thead>
    <% @students.each do |student| %>
      <tr id="<%= student.id %>">
        <td class="table-student-name"><%= student.full_name %></td>
        <% @standards.count.times do %>
          <td class='table-mastery-cell'></td>
        <% end %>
      </tr>
    <% end %>
  </table>

  <%= link_to section_path(@section, format: "csv"), class: 'link-box' do %>
    <div>Download as CSV</div>
  <% end %>

  <%= link_to edit_section_path(@section), class: 'link-box' do %>
    <div>Edit Section</div>
  <% end %>

  <%= link_to @section, method: :delete, confirm: "Are you sure?", class: 'link-box' do %>
    <div>Delete Section</div>
  <% end %>
</div>
