<div id="new-sitting">
<h1><%= @quiz.name %></h1>
<p id="instructions">Instructions: <%= @quiz.instructions %></p>

<%= form_for :response, url: quiz_sittings_path(@quiz) do |f| %>
  <% @questions.each_with_index do |question, i| %>
    <% if question.question_type == "multiple_choice" %>
      <%= render 'multiple_choice', f: f, question: question, i: i %>
    <% elsif question.question_type == "open_response" %>
      <%= render 'open_response', f: f, question: question, i: i %>
    <% end %>
  <% end %>

  <br>
  <%= submit_tag "Submit", class: 'link-box' %>
<% end %>
</div>
